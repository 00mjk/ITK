# Automatically configured options for Build/Test process


proc SetConfiguration { variable { value TESTINGCONFIGINVALIDVALUE } {convertPath CONVERTPATH }} \
{
  global TestingUtility
  global tcl_platform
  upvar \#0 $variable myvariable

  if { ![info exists TestingUtility(Valid)] } \
  {
    set TestingUtility(Valid) 1
  }
  
  if { $value == "TESTINGCONFIGINVALIDVALUE" } \
  {
    set TestingUtility(Valid) 0
  } \
  else \
  {
    # if running in a cygwin configuration, convert paths for cygtclsh80
    # whose source command does not understand /cygdrive/...
    if { [regexp cygtclsh [info nameofexecutable]] == 1 && $convertPath == "CONVERTPATH"} {
      set value [exec cygpath -w $value]
      set value [eval file join [file split $value]]
    }
  
    set TestingUtility($variable) $value
    set myvariable $value
  }
}
  


